# OCR Testing Backend Environment Variables
# Smart Data Extractor (SME) Project
# Copy this file to .env and fill in your actual values

# Google Vision API Configuration
GOOGLE_VISION_API_KEY=your-api-key-here

# Alternative: Use service account JSON file instead of API key
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Flask Configuration
FLASK_DEBUG=True
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Processing Configuration
OCR_TIMEOUT=300
UPLOAD_TIMEOUT=60
PDF_DPI=200

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE_MB=25

# Optional: AWS Textract (if you want to test AWS as well)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_DEFAULT_REGION=us-east-1